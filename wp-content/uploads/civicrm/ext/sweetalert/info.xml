<?xml version="1.0"?>
<extension key="sweetalert" type="module">
  <file>sweetalert</file>
  <name>Sweet Alert</name>
  <description>Adds support for the Sweet Alert popup library</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Mathieu Lutfy</author>
    <email>mathieu@symbiotic.coop</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/sweetalert</url>
    <url desc="Documentation">https://lab.civicrm.org/extensions/sweetalert</url>
    <url desc="Support">https://lab.civicrm.org/extensions/sweetalert/issues</url>
    <url desc="Licensing">https://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2025-10-27</releaseDate>
  <version>1.8.0</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>6.4</ver>
  </compatibility>
  <civix>
    <namespace>CRM/Sweetalert</namespace>
    <format>25.10.1</format>
  </civix>
  <classloader>
    <psr4 prefix="Civi\" path="Civi"/>
  </classloader>
  <mixins>
    <mixin>menu-xml@1.0.0</mixin>
    <mixin>smarty@1.0.3</mixin>
    <mixin>setting-php@1.0.0</mixin>
  </mixins>
  <upgrader>CiviMix\Schema\Sweetalert\AutomaticUpgrader</upgrader>
</extension>
