<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Biaproperty</base>
  <class>Unit</class>
  <name>civicrm_unit</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Unit ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>unit_size</name>
    <type>decimal</type>
    <comment>Unit Size</comment>
    <required>false</required>
    <html>
      <type>Number</type>
    </html>
  </field>

  <field>
    <name>unit_price</name>
    <type>decimal</type>
    <comment>Unit Price</comment>
    <required>false</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>unit_status</name>
    <type>int unsigned</type>
    <comment>Unit Status</comment>
    <required>false</required>
    <pseudoconstant>
      <optionGroupName>unit_status</optionGroupName>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>
  <foreignKey>
    <name>unit_status</name>
    <table>civicrm_option_value</table>
    <key>id</key>
  </foreignKey>

  <field>
    <name>mls_listing_link</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Unit Status</comment>
    <required>false</required>
    <html>
      <type>Url</type>
    </html>
  </field>

  <field>
    <name>unit_photo</name>
    <type>int unsigned</type>
    <comment>Unit Photo</comment>
    <required>false</required>
    <html>
      <type>Text</type>
    </html>
  </field>
  <foreignKey>
    <name>unit_photo</name>
    <table>civicrm_file</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>unit_location</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Unit Location</comment>
    <required>false</required>
    <html>
      <type>Text</type>
    </html>
  </field>
  <field>
    <name>address_id</name>
    <type>int unsigned</type>
    <comment>FK to Address</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>address_id</name>
    <table>civicrm_address</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <index>
    <name>UI_address_id</name>
    <fieldName>address_id</fieldName>
    <unique>true</unique>
  </index>
  <field>
    <name>property_id</name>
    <type>int unsigned</type>
    <comment>FK to civicrm_property</comment>
    <required>true</required>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>property_id</name>
    <table>civicrm_property</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>
  <field>
    <name>source_record_id</name>
    <type>int unsigned</type>
    <comment>Field used to handle sync processes</comment>
    <default>NULL</default>
    <html>
      <type>Number</type>
    </html>
  </field>
  <field>
    <name>source_record</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Field used to handle sync processes</comment>
    <default>NULL</default>
    <html>
      <type>Text</type>
    </html>
  </field>

  <index>
    <name>UI_source_record_id</name>
    <fieldName>source_record_id</fieldName>
    <fieldName>source_record</fieldName>
    <unique>true</unique>
  </index>
</table>
