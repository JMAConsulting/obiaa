<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Biaproperty</base>
  <class>PropertyUnit</class>
  <name>civicrm_property_unit</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique PropertyUnit ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>property_id</name>
    <type>int unsigned</type>
    <comment>FK to Property</comment>
  </field>
  <foreignKey>
    <name>property_id</name>
    <table>civicrm_property</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>unit_id</name>
    <type>int unsigned</type>
    <comment>FK to Unit</comment>
  </field>
  <foreignKey>
    <name>unit_id</name>
    <table>civicrm_unit</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <index>
    <name>UI_property_id_unnit_id</name>
    <fieldName>property_id</fieldName>
    <fieldName>unit_id</fieldName>
    <unique>true</unique>
  </index>

</table>
