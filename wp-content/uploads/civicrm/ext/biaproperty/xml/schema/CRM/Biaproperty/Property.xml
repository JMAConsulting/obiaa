<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Biaproperty</base>
  <class>Property</class>
  <name>civicrm_property</name>
  <comment>FIXME</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Property ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>roll_no</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Roll #</comment>
    <required>false</required>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>created_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>created_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>property_address</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Property Tax Roll Address</comment>
    <html>
      <type>Text</type>
    </html>
  </field>
  <index>
    <name>UI_property_address</name>
    <fieldName>property_address</fieldName>
    <unique>true</unique>
  </index>
  <field>
    <name>name</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Property Name</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>city</name>
    <type>varchar</type>
    <length>64</length>
    <comment>City this property is in</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>postal_code</name>
    <type>varchar</type>
    <length>64</length>
    <comment>postal code this property is in</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>modified_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
    <html>
      <type>EntityRef</type>
    </html>
  </field>
  <foreignKey>
    <name>modified_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>modified_date</name>
    <type>timestamp</type>
    <comment>When was the property was created or modified or deleted.</comment>
    <required>false</required>
    <default>CURRENT_TIMESTAMP ON UPDATE CURRENT_TIMESTAMP</default>
    <html>
      <label>Modified Date</label>
    </html>
    <readonly>true</readonly>
  </field>

  <field>
    <name>source_record_id</name>
    <type>int unsigned</type>
    <comment>Field used to handle sync processes</comment>
    <default>NULL</default>
    <html>
      <type>Number</type>
    </html>
  </field>
  <field>
    <name>source_record</name>
    <type>varchar</type>
    <length>255</length>
    <comment>Field used to handle sync processes</comment>
    <default>NULL</default>
    <html>
      <type>Text</type>
    </html>
  </field>

  <index>
    <name>UI_source_record_id</name>
    <fieldName>source_record_id</fieldName>
    <fieldName>source_record</fieldName>
    <unique>true</unique>
  </index>

  <paths>
    <add>civicrm/property/form?reset=1&amp;action=add</add>
    <view>civicrm/property/form?reset=1&amp;action=view&amp;id=[id]</view>
    <update>civicrm/property/form?reset=1&amp;action=update&amp;id=[id]</update>
    <delete>civicrm/property/form?reset=1&amp;action=delete&amp;id=[id]</delete>
  </paths>
</table>
